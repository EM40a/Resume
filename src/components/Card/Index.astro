---
import Button from "../Button/index.astro";
import Tags from "../Tags/Index.astro";

interface Props {
  data: {
    title: string;
    description: string[];
    tags: string[];
    url: string;
    image?: string;
  }[];
}

const { data } = Astro.props
---
<section class="flex flex-col gap-y-28">
{
  data.map(({ title, description, url, image, tags }) => (
    <article>
      <h1 class="text-2xl font-semibold text-accent">{title}</h1>
      
      {
        description.map((d) => (
            <p class="paragraph mt-3">{d}</p>
        ))
      }

      { 
        image &&
        <figure class="mb-3 rounded-md bg-img-project bg-cover overflow-hidden">
            <img
            loading="lazy"
            class="md:translate-x-28 md:translate-y-14 md:scale-125 transition-transform duration-300 ease-in-out hover:scale-100 hover:translate-x-0 hover:translate-y-0 min-h-80 object-contain"
            src={image}
            alt=`Preview del proyecto ${title}`
            title={url}
            />
        </figure>
      }
          
      <div class="flex flex-col items-stretch md:items-start">
        <Tags list={tags} />
        <Button href={url} />
      </div>
    </article>
  ))
}
</section>